@model YourProjectWebApp.ViewModels.InvoiceDetailsViewModel

<h4>Invoice Details for Invoice @Model.ToolLoanInvoice.Id</h4>
<hr />

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <h5>Invoice Details</h5>

            <dl>
                <dt>
                    @Html.DisplayNameFor(model => model.ToolLoanInvoice.ToolId)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Tool.Description)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ToolLoanInvoice.PatronId)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Patron.PatronName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ToolLoanInvoice.DateRented)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ToolLoanInvoice.DateRented)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ToolLoanInvoice.DateReturned)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ToolLoanInvoice.DateReturned)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ToolLoanInvoice.Workspace)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ToolLoanInvoice.Workspace)
                </dd>
            </dl>
        </div>

        <div class="col">
            <h5>Tool Details</h5>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Tool.BrandId)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Tool.BrandId)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Tool.Description)
                </dt>
