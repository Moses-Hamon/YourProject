                    @Html.DisplayFor(model => model.Tool.Active)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Tool.Comments)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Tool.Comments)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Tool.InUse)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Tool.InUse)
                </dd>
            </dl>
        </div>

        <div class="col">
            <h5>Patron Details</h5>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Patron.PatronName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Patron.PatronName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Patron.IsGroup)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Patron.IsGroup)
                </dd>
