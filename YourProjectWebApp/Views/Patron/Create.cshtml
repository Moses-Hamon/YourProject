@model YourProjectWebApp.WebServiceYourProject.Patron

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Patron</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.PatronName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PatronName, new { htmlAttributes = new { @class = "form-control" } })
                <label class="help text-info" id="help" style="display: none">HELP: Enter a name for the Patron</label> <!--HELP LABEL-->
                @Html.ValidationMessageFor(model => model.PatronName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsGroup, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsGroup)
                    <label class="help text-info" id="help" style="display: none">HELP: Does the Patron represent a Group of people.</label> <!--HELP LABEL-->
                    @Html.ValidationMessageFor(model => model.IsGroup, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
                <label class="help text-info" id="help" style="display: none">HELP: Saves the entry</label> <!--HELP LABEL-->
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
